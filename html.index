<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Model Briefing: Guía Oficial Flux</title>
    
    <!-- React & ReactDOM -->
    <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
    
    <!-- Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,800;1,400&display=swap" rel="stylesheet">

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            color: #1a1a1a;
        }
        .serif {
            font-family: 'Playfair Display', serif;
        }
        .fade-in { animation: fadeIn 0.8s ease-out forwards; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        
        .glass-box {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        const Icon = ({ name, size = 20, className }) => {
            const iconRef = useRef(null);
            useEffect(() => {
                if (iconRef.current && window.lucide) {
                    iconRef.current.innerHTML = '';
                    const i = document.createElement('i');
                    i.setAttribute('data-lucide', name);
                    iconRef.current.appendChild(i);
                    window.lucide.createIcons({ root: iconRef.current });
                }
            }, [name]);
            return <span ref={iconRef} className={className} />;
        };

        const App = () => {
            const [activeTab, setActiveTab] = useState('piel');

            const sections = {
                piel: {
                    title: "1. Estrategia de Piel y Cuerpo",
                    subtitle: "La Física de la Luz",
                    desc: "Para que el personaje se vea real, necesitamos que la luz 'resbale' por la piel. Una piel mate (seca) se ve falsa en 2K.",
                    content: [
                        {
                            type: "subsection",
                            title: "A. Uso de Aceite y Hidratación",
                            subtitle: "El secreto del volumen 3D",
                            img: "https://images.unsplash.com/photo-1616394584738-fc6e612e71b9?q=80&w=800&auto=format&fit=crop",
                            details: [
                                { label: "Objetivo", text: "Crear 'Reflejos Especulares' (puntos de luz blanca) en hombros, clavículas y muslos. Le dice a la IA: 'Esto es un objeto 3D con volumen'." },
                                { label: "Producto", text: "Aceite corporal ligero (Bio-Oil/Almendras) o crema mezclada con iluminador líquido." },
                                { label: "Zonas Clave", text: "Clavículas, hombros, puente de la nariz, espinillas y muslos." },
                                { label: "Nivel de Brillo", text: "MEDIO. Piel 'jugosa' (glowy), no grasienta. Si brilla mucho, secar con papel." },
                                { label: "Nota Piel Bronceada", text: "El aceite hará que el tono bronceado se vea más profundo y rico para contrastar con la lencería." }
                            ]
                        },
                        {
                            type: "subsection",
                            title: "B. Maquillaje e Identidad",
                            subtitle: "Regla de Oro: Menos es Más",
                            img: "https://images.unsplash.com/photo-1512413914633-b5043f4041ea?q=80&w=800&auto=format&fit=crop",
                            details: [
                                { label: "Rostro (Base)", text: "Base ligera o BB Cream. NO mate alta cobertura. Deja ver lunares, pecas y poros. Si la piel es perfecta, la IA genera plástico." },
                                { label: "Ojos", text: "Máscara abundante SÍ. Delineado inexistente o muy fino. Sombras tierra suaves. NADA de purpurina." },
                                { label: "Labios", text: "Bálsamo con color o Nude Mate. Evita rojo intenso o gloss pegajoso para no sesgar el entrenamiento." },
                                { label: "Cabello", text: "Suelto y natural. Con movimiento. Evita peinados rígidos con mucha laca." }
                            ]
                        }
                    ]
                },
                vestuario: {
                    title: "2. Listado de Vestuario",
                    subtitle: "El Dataset de Entrenamiento",
                    desc: "La modelo debe traer estos 4 cambios específicos. Cada uno enseña una lección diferente a la IA.",
                    grid: [
                        {
                            title: "1. Anatomía y Contraste",
                            item: "Conjunto Blanco / Beige Claro",
                            desc: "Sujetador + Braga/Tanga lisos (Algodón/Licra). Sin encaje.",
                            why: "Al ser piel bronceada, el blanco crea contraste máximo. Ayuda a la IA a definir dónde termina la piel y empieza la ropa.",
                            img: "https://images.unsplash.com/photo-1574169208507-84376144848b?q=80&w=800&auto=format&fit=crop"
                        },
                        {
                            title: "2. Complejidad y Textura",
                            item: "El 'Test del Encaje Negro'",
                            desc: "Body o conjunto negro de encaje floral con transparencias.",
                            why: "Flux debe aprender 'translucidez' viendo la piel bronceada a través del tejido negro. IMPORTANTE: Debe ajustar perfecto, sin arrugas extrañas.",
                            img: "https://images.unsplash.com/photo-1596483168864-1064560d2d31?q=80&w=800&auto=format&fit=crop"
                        },
                        {
                            title: "3. Brillo y Satín",
                            item: "Reflejos de Tela",
                            desc: "Bata de seda, babydoll o top brillante. Color Rojo Vino, Esmeralda o Azul.",
                            why: "Enseña a la IA a diferenciar el brillo de la tela vs. el brillo de la piel.",
                            img: "https://images.unsplash.com/photo-1550614000-4b9519e0002f?q=80&w=800&auto=format&fit=crop"
                        },
                        {
                            title: "4. Contexto 'Civil'",
                            item: "Ropa de Calle Ligera",
                            desc: "Jeans ajustados + Tank top básico o camisa blanca abierta.",
                            why: "Equilibra el entrenamiento para que el modelo no se vuelva inestable (NSFW agresivo).",
                            img: "https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?q=80&w=800&auto=format&fit=crop"
                        }
                    ]
                },
                checklist: {
                    title: "3. Resumen para la Modelo",
                    subtitle: "Checklist de Preparación",
                    desc: "Copia y pega este listado para enviárselo directamente a ella.",
                    content: [
                        {
                            category: "PIEL",
                            items: [
                                "Venir con la piel muy hidratada.",
                                "Traer aceite corporal o crema iluminadora.",
                                "Depilación perfecta (la IA magnifica detalles en 4K).",
                                "Manicure neutro (nude/francés), evitar colores neón/negros."
                            ]
                        },
                        {
                            category: "MAQUILLAJE",
                            items: [
                                "Estilo 'No-Makeup Makeup' (Cara lavada perfeccionada).",
                                "Base ligera y jugosa (no mate).",
                                "Labios color natural.",
                                "Evitar contorno (contouring) muy marcado."
                            ]
                        },
                        {
                            category: "MALETA (4 LOOKS)",
                            items: [
                                "BÁSICO: Conjunto interior BLANCO/Claro liso (sin encaje).",
                                "TEXTURA: Conjunto/Body NEGRO de encaje con transparencias.",
                                "LUJO: Prenda de Satín/Seda (Bata/Camisón) color fuerte.",
                                "CASUAL: Jeans + Camiseta básica."
                            ]
                        }
                    ]
                }
            };

            return (
                <div className="min-h-screen pb-20 bg-white text-slate-900 selection:bg-slate-900 selection:text-white">
                    
                    {/* Header Nav */}
                    <nav className="fixed top-0 w-full bg-white/95 backdrop-blur z-50 border-b border-slate-100">
                        <div className="max-w-5xl mx-auto px-6 h-20 flex justify-between items-center">
                            <div>
                                <h1 className="font-serif font-bold text-lg md:text-xl tracking-tight">FLUX <span className="text-slate-400 italic">SHOOT GUIDE</span></h1>
                            </div>
                            <div className="flex gap-2">
                                {Object.keys(sections).map(key => (
                                    <button 
                                        key={key}
                                        onClick={() => setActiveTab(key)}
                                        className={`px-4 py-2 text-[10px] md:text-xs font-bold uppercase tracking-widest rounded-sm transition-all ${activeTab === key ? 'bg-black text-white' : 'text-slate-500 hover:text-black hover:bg-slate-100'}`}
                                    >
                                        {sections[key].title.split('.')[1]}
                                    </button>
                                ))}
                            </div>
                        </div>
                    </nav>

                    {/* Main Content */}
                    <main className="max-w-5xl mx-auto px-6 pt-32 fade-in">
                        
                        {/* Section Header */}
                        <div className="mb-12 border-l-4 border-black pl-6">
                            <span className="text-[10px] font-bold uppercase tracking-[0.2em] text-slate-400 block mb-2">{sections[activeTab].title}</span>
                            <h2 className="text-4xl md:text-5xl font-serif font-medium mb-4 text-slate-900">{sections[activeTab].subtitle}</h2>
                            <p className="text-sm md:text-base text-slate-600 max-w-2xl leading-relaxed">{sections[activeTab].desc}</p>
                        </div>

                        {/* TAB: PIEL & CUERPO */}
                        {activeTab === 'piel' && (
                            <div className="space-y-16">
                                {sections.piel.content.map((block, idx) => (
                                    <div key={idx} className="grid md:grid-cols-12 gap-8 md:gap-12 items-start">
                                        {/* Imagen Referencia */}
                                        <div className="md:col-span-5 sticky top-24">
                                            <div className="relative aspect-[4/5] bg-slate-100 overflow-hidden shadow-sm group">
                                                <img src={block.img} className="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="" />
                                                <div className="absolute bottom-4 left-4 bg-white/90 px-3 py-1 text-[10px] uppercase font-bold tracking-widest">
                                                    Ref. Visual
                                                </div>
                                            </div>
                                        </div>
                                        
                                        {/* Contenido Texto */}
                                        <div className="md:col-span-7">
                                            <h3 className="text-2xl font-serif font-bold mb-1">{block.title}</h3>
                                            <p className="text-sm text-slate-500 uppercase tracking-wider mb-6 font-bold">{block.subtitle}</p>
                                            
                                            <div className="space-y-6">
                                                {block.details.map((item, i) => (
                                                    <div key={i} className="border-l-2 border-slate-100 pl-4 hover:border-black transition-colors">
                                                        <span className="block text-xs font-bold text-slate-900 uppercase mb-1">{item.label}</span>
                                                        <p className="text-sm text-slate-600 leading-relaxed">{item.text}</p>
                                                    </div>
                                                ))}
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}

                        {/* TAB: VESTUARIO (GRID 4 LOOKS) */}
                        {activeTab === 'vestuario' && (
                            <div className="grid md:grid-cols-2 gap-x-8 gap-y-12">
                                {sections.vestuario.grid.map((look, idx) => (
                                    <div key={idx} className="flex flex-col group">
                                        {/* Imagen */}
                                        <div className="aspect-[3/4] bg-slate-100 overflow-hidden mb-5 relative border border-slate-100">
                                            <img src={look.img} className="w-full h-full object-cover grayscale transition-all duration-700 group-hover:grayscale-0 group-hover:scale-105" alt="" />
                                            <div className="absolute top-0 left-0 bg-black text-white px-3 py-2 text-[10px] font-bold uppercase tracking-widest z-10">
                                                Look #{idx + 1}
                                            </div>
                                        </div>
                                        
                                        {/* Texto */}
                                        <div>
                                            <h3 className="font-serif text-xl font-bold mb-1">{look.title}</h3>
                                            <p className="text-xs font-bold uppercase text-purple-700 mb-3 tracking-wider">{look.item}</p>
                                            <p className="text-sm text-slate-700 mb-3 font-medium">{look.desc}</p>
                                            <div className="bg-slate-50 p-3 text-xs text-slate-500 italic border-l-2 border-slate-200">
                                                <span className="font-bold not-italic text-slate-400 uppercase text-[10px] block mb-1">Objetivo IA:</span>
                                                "{look.why}"
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}

                        {/* TAB: CHECKLIST RESUMEN */}
                        {activeTab === 'checklist' && (
                            <div className="max-w-3xl mx-auto">
                                <div className="bg-slate-50 border border-slate-200 p-8 md:p-12 relative shadow-sm">
                                    <div className="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white border border-slate-200 px-4 py-1 rounded-full shadow-sm">
                                        <span className="text-[10px] font-bold uppercase tracking-widest text-slate-400">Copy & Send</span>
                                    </div>

                                    {sections.checklist.content.map((group, idx) => (
                                        <div key={idx} className="mb-10 last:mb-0">
                                            <h3 className="font-serif text-xl font-bold mb-4 border-b border-slate-200 pb-2 flex items-center gap-2">
                                                {idx === 0 && <Icon name="sparkles" size={18} />}
                                                {idx === 1 && <Icon name="palette" size={18} />}
                                                {idx === 2 && <Icon name="shopping-bag" size={18} />}
                                                {group.category}
                                            </h3>
                                            <ul className="space-y-3">
                                                {group.items.map((item, i) => (
                                                    <li key={i} className="flex items-start gap-3 text-sm text-slate-700">
                                                        <div className="w-4 h-4 rounded-sm border border-slate-300 mt-0.5 shrink-0 flex items-center justify-center">
                                                            <div className="w-2 h-2 bg-slate-200"></div>
                                                        </div>
                                                        {item}
                                                    </li>
                                                ))}
                                            </ul>
                                        </div>
                                    ))}
                                </div>
                                <div className="text-center mt-8">
                                    <button className="text-xs font-bold uppercase tracking-widest text-slate-400 hover:text-black transition-colors flex items-center justify-center gap-2 mx-auto">
                                        <Icon name="copy" size={14} /> Copiar al portapapeles
                                    </button>
                                </div>
                            </div>
                        )}

                    </main>

                    <footer className="mt-24 border-t border-slate-100 py-12 text-center px-6">
                        <p className="text-[10px] uppercase tracking-[0.2em] text-slate-400 mb-2">Protocolo de Entrenamiento Flux.1</p>
                        <p className="font-serif text-slate-300 italic text-sm">"La calidad del dataset es el límite de la IA"</p>
                    </footer>
                </div>
            );
        };

        ReactDOM.createRoot(document.getElementById('root')).render(<App />);
    </script>
</body>
</html>
